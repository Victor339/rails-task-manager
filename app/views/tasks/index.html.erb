<h1>My tasks</h1>
<ul>
   <% @tasks.each do |task| %>
    <li> <% if task[:completed] == true %>
  <input checked="checked" type="checkbox" id="task_checked"/>
  <% else %>
  <input unchecked="unchecked" type="checkbox" id="task_unchecked"/>
  <% end %> <%=link_to task.title, task_path(task) %> <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }  %></li>
  <% end %>
</ul>

<p><%= link_to "Add a new task", tasks_new_path %></p>


