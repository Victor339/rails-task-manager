<h1><%= @task.title %></h1>

<p><%= @task.details %></p>


<% if @task[:completed] == true %>
  <input checked="checked" type="checkbox"/>
  <p>This task is completed</p>
  <% else %>
  <input unchecked="unchecked" type="checkbox"/>
  <p>This task is not completed yet</p>
  <% end %>

<p><%= link_to "Back to task list", tasks_path(@tasks) %></p>

